<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background = "@color/white"
    tools:context=".ui.user.temperature.TemperatureFragment">

    <ImageButton
        android:id="@+id/buttonRefresh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/update_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:contentDescription="@string/refresh" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="144dp"
        android:text="@string/temperature"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/temperatureCard"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:background="@drawable/orange_rounded_edges_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/temperature_icon"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/textViewTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="48sp"
            tools:text="40C" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:text="@string/humidity"
        android:textColor="@color/black"
        android:fontFamily="cursive"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@id/temperatureCard"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/humidityCard"
        android:layout_width="250dp"
        android:layout_height="100dp"

        android:background="@drawable/blue_rounded_edges_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintStart_toStartOf="parent"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/humidity"
            android:layout_gravity="center"
            android:importantForAccessibility="no" />

        <TextView
            android:id="@+id/textViewHumidity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="40C"
            android:textColor="@color/white"
            android:textSize="48sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>