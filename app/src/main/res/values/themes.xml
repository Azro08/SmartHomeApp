    <style name="BottomNavigationViewItem" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">32dp</item> <!-- Adjust the size of the icons -->
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewActiveText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewInactiveText</item>
    </style>

    <style name="BottomNavigationViewActiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item> <!-- Adjust the size of the active text -->
    </style>

    <style name="BottomNavigationViewInactiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item> <!-- Adjust the size of the inactive text -->
